<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.thor.latihancleancode.ui.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fade_in" />
        <action
            android:id="@+id/to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:enterAnim="@anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.thor.latihancleancode.ui.main.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="story"
            app:argType="com.thor.latihancleancode.repository.story.Story" />
    </fragment>
    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.thor.latihancleancode.ui.main.upload.UploadFragment"
        android:label="fragment_upload"
        tools:layout="@layout/fragment_upload" >
        <action
            android:id="@+id/action_uploadFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/fade_in" />
    </fragment>
</navigation>